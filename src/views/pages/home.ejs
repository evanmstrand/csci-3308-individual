</nav>

<div class="container">

	<% if(data){ 
		var src = data.strArtistBanner;
		%>
	<% } %>
	
		<img class="my-3" src="<%- src%>">
	
	

	<h1 class="text-center my-3" id="artistName">
		<% if(data){
			var display = '';
			display += data.strArtist;
			%>
		<%- display %>
		<%}%>	
	</h1>
	

	<button class="btn btn-primary my-3" data-toggle="modal" data-target="#addReview">
		Add Review
	</button>

	<div class="modal fade" id="addReview" tabindex="-1" role="dialog">
		<div class="modal-dialog" role="document">
		  <div class="modal-content">
			<div class="modal-header">
			  <h4 class="modal-title" id="addReviewTitle">Add a Review</h5>
			</div>
			<div class="modal-body">
				<form class="" action="/add_review" method="post">
					<input class="form-control my-2" type="text" name="artistName" placeholder="Artist Name">
					<input class="form-control my-2" type="text" name="review" placeholder="Review">
					<input class="btn btn-primary my-2" type="submit" name="submit3" value="submit"/>
				</form>
			</div>
			<div class="modal-footer">
			  <button type="button" class="btn btn-dark" data-dismiss="modal">Close</button>
			</div>
		  </div>
		</div>
	  </div>

	<div class="my-3">

		<% if(data){ 
			var website = 'Website:  ';
			website += data.strWebsite;
			%>
			<%- website%>

		<% } %>

		<!--
			<button class="btn btn-primary" href= "<%= website %>"> Band Website</button>
		-->
		
		
	</div>

	<div class="my-3">

		<% if(data){
			var display = 'Formation Year:  ';
			'</br>'
			display += data.intFormedYear;
			%>
		<%- display %>
		<%}%>	

	</div>

	<div class="my-3">

		<% if(data){
			var display = 'Genres:  ';
			'</br>'
			display += data.strGenre;
			%>
		<%- display %>
		<%}%>	

	</div>

	<div class="my-3">

		<% if(data){
			var display = 'Bio:  ';
			'<div class = "my-2"></div>'
			display += data.strBiographyEN;
			%>
		<%- display %>
		<%}%>	

	</div>

</div>

