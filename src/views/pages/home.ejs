<div class="container my-5 mx-3">

	<form class="" action="/get_feed" method="post">
		<div class="row my-2">
		 
		  <div class="col-12">
			<input class="form-control" type="text" name="search" id="search" placeholder="Search Artists">
		  </div>
		</div>
		<div class="row">
			<div class="col-sm">
				<input class="btn" style="background-color: white;" type="submit" name="Submit" value = "Submit"/>
			  </div>
		</div>
		  
	</form>
